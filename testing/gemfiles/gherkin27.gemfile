source 'https://rubygems.org'

gemspec path: '../../'

if RUBY_VERSION =~ /^2\.[3456]/
  gem 'cucumber', '2.2.0' # No recent version of cucumber that supports Ruby < 2.7 and cucumber-gherkin 27
else
  # The minimum version of Cucumber that uses the `cucumber-gherkin` gem
  gem 'cucumber', '>=4.0.0.rc.4'
end

if RUBY_VERSION =~ /^4\./
  # base64 gem stopped being included automatically after Ruby 3.4
  gem 'base64'

  # win32ole gem stopped being included automatically after Ruby 4.0
  gem 'win32ole' if RbConfig::CONFIG['host_os'].downcase =~ /mswin|msys|mingw32/
end

gem 'cucumber-gherkin', '~> 27.0'
