source 'https://rubygems.org'

gemspec path: '../../'

# rubocop:disable Bundler/DuplicatedGem
if RUBY_VERSION =~ /^2\.[34]/
  gem 'cucumber', '2.2.0' # No recent version of cucumber that supports Ruby < 2.5 and cucumber-gherkin 22
else
  # The minimum version of Cucumber that uses the `cucumber-gherkin` gem
  gem 'cucumber', '>=4.0.0.rc.4'
end
# rubocop:enable Bundler/DuplicatedGem

# JRuby + Windows
if (RUBY_PLATFORM == 'java') && (RbConfig::CONFIG['host_os'] =~ /mingw32|mswin32/)
  gem 'jruby-win32ole'  # Some versions of Cucumber rely on this and it seems to not be automatically included
end

gem 'cucumber-gherkin', '~> 22.0'
